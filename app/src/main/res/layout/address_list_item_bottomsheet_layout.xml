<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        android:src="@drawable/ic_location_64"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddress_AddressActivtiy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_tital" />

    <TextView
        android:id="@+id/txt_tital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_homeaddress"
        app:layout_constraintEnd_toStartOf="@+id/cbChooseDefault_ListItem"
        app:layout_constraintStart_toEndOf="@+id/img_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_homeaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="401,F1,Motavaracha"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txt_tital"
        app:layout_constraintTop_toBottomOf="@+id/txt_tital" />


    <TextView
        android:id="@+id/tvAddress_AddressActivtiy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="401,F1,Motavaracha"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_homeaddress"
        app:layout_constraintTop_toBottomOf="@+id/txt_homeaddress" />

    <ImageView
        android:id="@+id/cbChooseDefault_ListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/unchecked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
